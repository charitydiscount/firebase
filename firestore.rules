service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /cases/{caseId} {
      allow read: if true;
    }
    match /favoriteShops/{userId} {
    	allow read, write: if belongsTo(userId);
      allow create: if isSignedIn();
    }
    match /settings/{userId} {
    	allow read, write: if belongsTo(userId);
      allow create: if isSignedIn();
    }
    match /users/{userId} {
    	allow read, write: if belongsTo(userId);
      allow create: if isSignedIn();
    }
    match /points/{userId} {
    	allow read: if belongsTo(userId);
      allow write: if false;
    }
    match /requests/{request} {
    	allow read, write: if false;
      allow create: if isSignedIn();
    }
    match /reviews/{shopId} {
    	allow read: if true;
      allow update: if isOwnReview(request);
      allow create: if isSignedIn();
    }
  }
}

function belongsTo(userId) {
  return request.auth.uid == userId
}
function isSignedIn() {
  return request.auth.uid != null;
}
function isOwnReview(request) {
	return request.resource.data.reviews.size() == 1 && request.resource.data.reviews[request.auth.uid] != null;
}