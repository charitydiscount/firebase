rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /icons/{iconId} {
      allow read: if true;
      allow write: if false;
    }
    match /profilePhotos/{userDir}/{imageId} {
      allow read: if true;
      allow write: if request.auth.uid == userDir;
    }
    match /notifications/{imageId} {
      allow read: if true;
      allow write: if false;
    }
    match /publicImages/{dir}/{imageId} {
      allow read: if true;
      allow write: if false;
    }
    match /badges/{badgeId} {
      allow read: if true;
      allow write: if false;
    }
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
